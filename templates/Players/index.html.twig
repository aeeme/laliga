{% extends 'base.html.twig' %}

{% block body %}
    <h1> Jugadores </h1><br>
    <h2>Ver jugadores </h2>
    <p>Además, podrás actualizar y eliminar jugadores.</p>
    <a href="/players/list"><button>Buscar</button></a>


    <h2>Busca un jugador</h2>
    <form method="post" action="{{ path('players_redirect') }}">
        <label for="playerID">ID de tu equipo:</label>
        <input type="number" id="playerID" name="playerID" min="1" required>
        <button type="submit">Buscar</button>
    </form><br><br>


    <h2> Crea un jugador </h2>
    <form id="create-player-form" action="{{ path('player_create') }}" method="post">
        <label for="nombre">Nombre: </label>
        <input type="text" id="nombre" name="nombre" maxlength="100" required> <br><br>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required> <br> <br>
        <label for="salario">Salario: </label>
        <input type="number" id="salario" name="salario" min="0" required><br><br>
        <label for="club_id">ID del club (Opcional):</label>
        <input type="number" id="club_id" name="club_id" min="1"> <br> <br>
        <button type="reset">Borrar</button>
        <button type="submit">Crear jugador</button>
    </form><br><br>

    <a href="/"><h3>Inicio</h3></a
{% endblock %}